.box {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.thing {
  width: 45%;
  padding: 10rpx;
  float: left;
  background-color: #b4facf;
  margin-bottom: 10rpx;
  box-shadow: 10rpx 10rpx 5rpx #ccc;
}
.img {
  width: 100%;
}
image {
  width: 100%;
}
.text {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 700;
}
